@model User;
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/register.css">
  <title>Cadastro!</title>
</head>
<body>
  <a href="@Url.Action("Index", "Home")" class="arrowButton">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left"
      viewBox="0 0 16 16">
      <path fill-rule="evenodd"
        d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
    </svg>
  </a>
  <h1 class="nameText">Digite seu nome para que possamos te identificar.</h1>
  @using (Html.BeginForm())
  {
    <div class="input-label">
      @Html.LabelFor(model => model.name)
      @Html.TextBoxFor(model => model.name, new {@class = "input-text"})
    </div>
    <button type="submit" class="button" asp-controller="user" asp-action="companyPage">Continuar</button>
  }
</body>
</html>
